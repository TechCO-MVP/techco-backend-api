{
    "[python]": {
        "editor.formatOnType": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
    },
    "flake8.args": [
        "--config=./.code_quality/flake8.ini"
    ],
    "isort.args": [
        "--settings-path=./.code_quality/isort.cfg"
    ],
    "black-formatter.args": [
        "--config=./.code_quality/black.toml"
    ],
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/.venv": true,
    }
}